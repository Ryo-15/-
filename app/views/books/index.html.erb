<p class="notice">
  <%= notice %>
</p>

<body>
  <h1>Books</h1>
  <table>
    <thead>
      <th class="table_title">Title</th>
      <th class="table_body">Body</th>
      <th></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td class="table_title"><%= book.title %></td>
        <td class="table_body"><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", destroy_book_path(book),method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
<%= form_for(@book) do |f| %>

  <%= render 'layouts/error_messages' %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</body>


